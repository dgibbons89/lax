<h3>Users</h3>
<div class="span8">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>School</th>
        <th>Position</th>
        <th>Registered</th>
        <th>Role</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%=  user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.school %></td>
          <td><%= user.position %></td>
          
          <td><%= user.created_at.to_date %></td>
          <td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
          <td>
            <a class="btn btn-mini" data-toggle="modal" href="#role-options-<%= user.id %>" type="button">Change role</a>
            
          </td>
          <td>
            
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

