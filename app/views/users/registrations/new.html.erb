<div class="max-wide has-padding">
<div class='panel panel-default'>

  <div class='panel-heading'>
    <h2>Sign up</h2>
  </div>



            <div class="panel-body">
              <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <%= f.hidden_field :plan, value: @plan %>

                <%= f.hidden_field :stripe_card_token %>

               <div id='stripe_error' class="alert alert-info" style='display:none'>
      </div>

      <div class='form-group'>
        <%= f.label :name %><br>
        <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.label :school %><br>
        <%= f.text_field :school, :autofocus => true, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.label :position %><br>
        <%= f.text_field :position, :autofocus => true, class: 'form-control' %>
      </div>
            <div class='form-group'>
        <%= f.label :email %><br>
        <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.label :password %>(must be atleast 8 characters)<br>
        <%= f.password_field :password, class: 'form-control' %>
      </div>    

      <% if @user.stripe_card_token.present? %>
        Credit Card is on File
      <% else %>
        <div class='form-group'>
          <%= label_tag :card_number, "Credit Card Number" %>
          <%= text_field_tag :card_number, nil, name: nil, class: 'form-control' %>
        </div>

        <div class='form-group'>
          <%= label_tag :card_code, "Security Code on Card (CVV)" %>
        <%= text_field_tag :card_code, nil, name: nil %><br>
        <%= label_tag :card_month, "Card Expiration" %><br>
        <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"} %>
        <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"} %>
        </div>
        
      <% end %>

      <div>
        <%= f.submit "Sign up", class: 'btn btn-primary' %>
      </div>

    <% end %>
  </div>
  <div class='panel-footer'>
    <%= render "devise/shared/links" %>
  </div>
</div>
</div>