  <section class="preview-account">
    <div class="container">
      <div class="maincontainer col-md-12">

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3>Sign Up</h3>
          </div>

          <div class="panel-body">

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-group">
                <div class="row">
                  <div class="col-md-6">
                   <%= f.label :name %>
                   <%= f.text_field :name, autofocus: true, class: "form-control" %>
                 </div>
                </div>
              </div>
              <div class="form-group">
                <div class="row">
                  <div class="col-md-6">
                   <%= f.label :position %>
                   <%= f.text_field :position, autofocus: true, class: "form-control" %>
                 </div>
                </div>
              </div>
              <div class="form-group">
                <div class="row">
                  <div class="col-md-6">
                   <%= f.label :school %>
                   <%= f.text_field :school, autofocus: true, class: "form-control" %>
                 </div>
                </div>
              </div>                            

              <div class="form-group">
                <div class="row">
                  <div class="col-md-6">
                    <%= f.label :email %>
                    <%= f.email_field :email, class: "form-control" %>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <div class="row">
                  <div class="col-md-6">
                    <%= f.label :password %>
                    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                  </div>
                </div>
              </div>
              <br><br>

              <div class="form-group">
                <div class="row">
                  <div class="col-md-6">
                    <%= f.submit "Sign up", class: "btn btn-primary signbtn" %>
                  </div>
                </div>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </section>