
<div class="wide has-padding">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3>Sign Up</h3>
          </div>

          <div class="panel-body">

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %><br>

              <div class="form-group">
                <div class="row">
                  <div class="col-md-12 col-xs-12">
                   <%= f.label :name %>
                   <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: 'John Doe' %>
                 </div>
                </div>
              </div>
              <div class="form-group">
                <div class="row">
                  <div class="col-md-12 col-xs-12">
                   <%= f.label :position %>
                   <%= f.text_field :position, autofocus: true, class: "form-control", placeholder: 'Attack' %>
                 </div>
                </div>
              </div>
              <div class="form-group">
                <div class="row">
                  <div class="col-md-12 col-xs-12">
                   <%= f.label :school %>
                   <%= f.text_field :school, autofocus: true, class: "form-control", placeholder: 'Delbarton' %>
                 </div>
                </div>
              </div>                            

              <div class="form-group">
                <div class="row">
                  <div class="col-md-12 col-xs-12">
                    <%= f.label :email %>
                    <%= f.email_field :email, class: "form-control", placeholder: 'johndoe@test.com' %>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <div class="row">
                  <div class="col-md-10 col-xs-12">
                    <%= f.label :password %><i>(minimum 8 characters)</i>
                    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: 'Password' %>
                  </div>
                </div>
              </div>
              <br>
              <div class="form-group">
                <div class="row">
                  <div class="col-md-10 col-xs-12">
                  <%= f.submit "Create Your Account", class: "btn  btn-default btn-lg" %>
                  </div>
                </div>
              </div>
            <% end %>

            <div class="panel-footer">
              <%= render "devise/shared/links" %>
            </div>

          </div>
        </div>
      </div>

